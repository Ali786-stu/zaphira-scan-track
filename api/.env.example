# Zaphira Attendance System - Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database host (usually 'localhost' for local development)
DB_HOST=localhost

# Database name (create this database first)
DB_NAME=zaphira_attendance

# Database user (create this user and grant privileges)
DB_USER=root

# Database password (use a strong password in production)
DB_PASS=password

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Session lifetime in seconds (3600 = 1 hour)
SESSION_LIFETIME=3600

# CORS origin - Your frontend application URL
# For development: http://localhost:5173 or http://localhost:3000
# For production: https://your-domain.com
CORS_ORIGIN=http://localhost:5173

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Application environment (development, staging, production)
APP_ENV=development

# Debug mode (true for development, false for production)
DEBUG=true

# =============================================================================
# OPTIONAL: EMAIL CONFIGURATION (for future features)
# =============================================================================
# SMTP server for sending notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME=Zaphira Attendance

# =============================================================================
# OPTIONAL: FILE UPLOAD CONFIGURATION
# =============================================================================
# Maximum file upload size in bytes
MAX_UPLOAD_SIZE=5242880

# Upload directory (relative to API root)
UPLOAD_DIR=uploads

# Allowed file extensions
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf

# =============================================================================
# OPTIONAL: BACKUP CONFIGURATION
# =============================================================================
# Auto backup enabled (true/false)
AUTO_BACKUP_ENABLED=false

# Backup directory
BACKUP_DIR=../backups

# Backup retention days
BACKUP_RETENTION_DAYS=30

# =============================================================================
# PRODUCTION NOTES
# =============================================================================
# 1. Set APP_ENV=production in production
# 2. Set DEBUG=false in production
# 3. Use a strong database password
# 4. Set CORS_ORIGIN to your actual domain
# 5. Use HTTPS in production
# 6. Configure proper file permissions
# 7. Set up regular database backups
# 8. Monitor error logs
# 9. Consider implementing rate limiting at web server level
# 10. Use environment-specific database credentials